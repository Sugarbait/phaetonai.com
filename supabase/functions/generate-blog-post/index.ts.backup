// Function to count words
function countWords(text: string): number {
  if (!text || typeof text !== 'string') return 0;
  const textOnly = text.replace(/<[^>]*>/g, ' ');
  const words = textOnly.split(/\s+/).filter(word => word.length > 0);
  return words.length;
}

